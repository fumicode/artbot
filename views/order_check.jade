extends layout

block head-end

block content
  .deviceScreen.--iPadAir2
    .pageLayout
      .pageLayout__topbar
        include ./includes/topbar
        +topbar()
          table.n.topButtons
            tr
              td.topButtons__cell
                a.button.moveButton.--back(href="#{path.join(url,'..')}") 
                  img(src="/images/button_back.png" alt="BACK")
              td.topButtons__cell
                form(method="POST" action="#{url}" style="display:inline-block")
                  button.moveButton.--next(type="submit") 
                    img(src="/images/button_next.png" alt="CHECK")
            
      .pageLayout__content
        .checkPage
          form
            table.n
              tr
                td
                  img(src="/images/tee.png")
                
                  
                td
                  img(src="/images/sweat.png")
                  
              tr
                td
                  table.n
                    tr
                      td 36
                      td 38
                      td 40
                      td 42
                      td 44
                    tr
                      td #{order && order.items_sizes.tee.tee_36}
                      td #{order && order.items_sizes.tee.tee_38}
                      td #{order && order.items_sizes.tee.tee_40}
                      td #{order && order.items_sizes.tee.tee_42}
                      td #{order && order.items_sizes.tee.tee_44}

                td
                  table.n
                    tr
                      td 36
                      td 40
                      td 44
                    tr
                      td #{order && order.items_sizes.sweat.sweat_36}
                      td #{order && order.items_sizes.sweat.sweat_40}
                      td #{order && order.items_sizes.sweat.sweat_44}

            hr.space 

            table.n
              tr
                td 整理券番号
                td #{order.ticket}
                  
                td お客様名
                td #{order.cust_name}
