extends layout

block head-end

block content
  .deviceScreen.--iPadAir2
    .pageLayout

      form(method="POST" action="#{url}")
        .pageLayout__topbar
          include ./includes/topbar

          +topbar()
            table.n.topButtons
              tr
                td.topButtons__cell
                  a.button.moveButton.--back(href="#{path.join('/artworks', order.artwork.toString())}") 
                    img(src="/images/button_back.png" alt="BACK")
                td.topButtons__cell
                  button.moveButton.--next(type="submit") 
                    img(src="/images/button_next.png" alt="CHECK")
              
        .pageLayout__content
          .checkPage
            form
              table.n
                tr
                  td
                    div(style="position:relative; height:380px;")
                      .artwork
                        .artwork__printArea(style="top:50px;left:70px; transform:scale(0.7)")
                          .artwork__inner
                            .stump(style="top:10%;left:13%;")
                              img.stump__img(src="/images/stamps/600/animal/galloping_horse.png")

                            .stump(style="top:40%;left:15%;")
                              img.stump__img(src="/images/stamps/600/sign/smc_blocktype_black.png")
                  
                    
                  td
                    div(style="position:relative;  height:380px; ")
                      .artwork(style="background-image:url(/images/sweat.png);")
                        .artwork__printArea(style="top:50px;left:70px; transform:scale(0.7)")
                          .artwork__inner
                            .stump(style="top:10%;left:13%;")
                              img.stump__img(src="/images/stamps/600/animal/galloping_horse.png")

                            .stump(style="top:40%;left:15%;")
                              img.stump__img(src="/images/stamps/600/sign/smc_blocktype_black.png")
                    
                tr
                  td
                    table.n
                      tr
                        td 36
                        td 38
                        td 40
                        td 42
                        td 44
                      tr
                        td
                          input(type="number" name="tee_size_36" 
                            value="#{order.items_sizes.tee.tee_36}")
                        td
                          input(type="number" name="tee_size_38" 
                            value="#{order.items_sizes.tee.tee_38}")
                        td
                          input(type="number" name="tee_size_40" 
                            value="#{order.items_sizes.tee.tee_40}")
                        td
                          input(type="number" name="tee_size_42" 
                            value="#{order.items_sizes.tee.tee_42}")
                        td
                          input(type="number" name="tee_size_44" 
                            value="#{order.items_sizes.tee.tee_44}")
                  td
                    table.n
                      tr
                        td 36
                        td 40
                        td 44
                      tr
                        td
                          input(type="number" name="sweat_size_36"
                            value="#{order.items_sizes.sweat.sweat_36}")
                        td
                          input(type="number" name="sweat_size_40"
                            value="#{order.items_sizes.sweat.sweat_40}")
                        td
                          input(type="number" name="sweat_size_44"
                            value="#{order.items_sizes.sweat.sweat_44}")

              hr.space 

              table.n
                tr
                  td 整理券番号<br>Ticket number
                  td 
                    input(type="text" name="ticket" 
                      value="#{order.ticket && order.ticket || ''}")
                  td お客様名<br> Your name
                  td 
                    input(type="text" name="cust_name" 
                      value="#{order.cust_name && order.cust_name || ''}")

