extends layout

block head-end


block body-end
  script.
    //サーバーからの値の受け渡しはこうするしかない
    //もしくは、SPAにするか
    window.data = {
      artwork: !{ JSON.stringify(artwork) }
    };

  script(src="/javascripts/bundle.js")


block content
  .deviceScreen.--iPadAir2
    .pageLayout
      form(method="POST" action="#{url}")
        .pageLayout__topbar
          include ./includes/topbar
          +topbar()
            table.n.topButtons
              tr
                td.topButtons__cell
                  a.button.moveButton.--back(href="#{path.join('/artworks', order.artwork._id.toString())}") 
                    img(src="/images/button_back.png" alt="BACK")
                td.topButtons__cell
                  button.moveButton.--next(type="submit") 
                    img(src="/images/button_check.png" alt="CHECK")
        .pageLayout__content
          .checkPage
            form
              table.n
                tr
                  td
                    div(style="position:relative; height:380px;")
                      #ArtworkTee
                  td
                    div(style="position:relative;  height:380px; ")
                      #ArtworkSweat

                tr
                  td
                    table.n
                      tr
                        td 36
                        td 38
                        td 40
                        td 42
                        td 44
                      tr
                        td
                          input(type="number" name="tee_size_36" 
                            value="#{order.items_sizes && order.items_sizes.tee.tee_36 || 0}")
                        td
                          input(type="number" name="tee_size_38" 
                            value="#{order.items_sizes && order.items_sizes.tee.tee_38 || 0}")
                        td
                          input(type="number" name="tee_size_40" 
                            value="#{order.items_sizes && order.items_sizes.tee.tee_40 || 0}")
                        td
                          input(type="number" name="tee_size_42" 
                            value="#{order.items_sizes && order.items_sizes.tee.tee_42 || 0}")
                        td
                          input(type="number" name="tee_size_44" 
                            value="#{order.items_sizes && order.items_sizes.tee.tee_44 || 0}")
                  td
                    table.n
                      tr
                        td 36
                        td 40
                        td 44
                      tr
                        td
                          input(type="number" name="sweat_size_36"
                            value="#{order.items_sizes && order.items_sizes.sweat.sweat_36 || 0}")
                        td
                          input(type="number" name="sweat_size_40"
                            value="#{order.items_sizes && order.items_sizes.sweat.sweat_40 || 0}")
                        td
                          input(type="number" name="sweat_size_44"
                            value="#{order.items_sizes && order.items_sizes.sweat.sweat_44 || 0}")

              hr.space 

              table.n
                tr
                  td 整理券番号<br>Ticket number
                  td 
                    input(type="text" name="ticket" 
                      value="#{order.ticket && order.ticket || ''}")
                  td お客様名<br> Your name
                  td 
                    input(type="text" name="cust_name" 
                      value="#{order.cust_name && order.cust_name || ''}")

